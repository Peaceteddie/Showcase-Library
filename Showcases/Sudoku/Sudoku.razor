@namespace ShowcaseLibrary.Showcases

<span class="d-flex flex-column gap-2 justify-content-center w-100" Sudoku>
    @if (solved)
    {
        <div class="alert alert-success">Solved!</div>
    }
    <div class="align-items-center d-flex flex-row gap-5 justify-content-center text-center">
        <label class="d-flex flex-column align-items-center">
            <span class="text-center">Easy</span>
            <input type="radio" id="easy" name="difficulty" value="false" @onchange="@(e => SetDifficulty(false))">
        </label>
        <label class="d-flex flex-column align-items-center">
            <span class="text-center">Normal</span>
            <input type="radio" id="normal" name="difficulty" value="null" @onchange="@(e => SetDifficulty(null))"
                checked>
        </label>
        <label class="d-flex flex-column align-items-center">
            <span class="text-center">Hard</span>
            <input type="radio" id="hard" name="difficulty" value="true" @onchange="@(e => SetDifficulty(true))">
        </label>
    </div>
    <div class="d-flex flex-row gap-2 justify-content-center">
        <label>
            <span>4x4</span>
            <input type="radio" id="4x4" name="size" value="4" @onchange="@(e => SetSize(4))">
        </label>
        <label>
            <span>9x9</span>
            <input type="radio" id="9x9" name="size" value="9" @onchange="@(e => SetSize(9))" checked>
        </label>
        <label>
            <span>16x16</span>
            <input type="radio" id="16x16" name="size" value="16" @onchange="@(e => SetSize(16))">
        </label>
    </div>
    <div class="d-flex flex-row gap-2 justify-content-center">
        <button class="col-4" @onclick="StartNewGame">New Game</button>
        <button class="col-2" @onclick="Solve">Solve</button>
    </div>
    <div class="h-100 w-100">
        @for (int row = 0; row < Size; row++)
        {
            if (row % (Size == 16 ? 4 : Size == 9 ? 3 : 2) == 0)
            {
                <div style="height: 1rem;" />
            }
            <div class="d-flex flex-row justify-content-center">
                @for (int col = 0; col < Size; col++)
                {
                    if (col % (Size == 16 ? 4 : Size == 9 ? 3 : 2) == 0)
                    {
                        <div style="width: 1rem;" />
                    }
                    @RenderCell(row, col)
                }
            </div>
        }
    </div>
</span>
